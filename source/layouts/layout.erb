    <!--
      Modal Dialogs
    -->

    <!-- Contact form dialog -->
    <div id="contact-modal" class="reveal-modal" data-reveal aria-labelledby="Contact Us" aria-hidden="true" role="dialog">

      <form class="formspree" data-success="Thanks for your message, we&rsquo;ll respond shortly!" data-failure="Sorry, something went wrong&hellip;please try again later.">
        <input type="hidden" name="_subject" value="New message from worldforestinvestment.com" />
        <input type="text" name="_gotcha" style="display:none" />

        <div class="row">
          <div class="large-12 columns">
            <label> Subject
              <input type="text" name="subject" placeholder="How much wood could a woodchuck chuck?" />
            </label>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <label> Email
              <input type="email" name="email" placeholder="you@example.com" />
            </label>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <label> Message
              <textarea name="message" placeholder="If a woodchuck could chuck wood?" rows="4"></textarea>
            </label>
          </div>
        </div>

        <div class="row">
          <div class="large-2 columns">
            <a href="#" class="small button submit">Submit</a>
          </div>
        </div>
      </form>

      <!-- Close button -->
      <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    </div> <!-- End of Contact form dialog -->


